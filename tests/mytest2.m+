/*
Take an integer as input, then compute and print the sum of
all natural numbers less than (not including) n
*/

var n:int;
var i:int;
var result:int;

% main program function
begin
    i := 1;
    result := 0;
    read n;
    while i<n do {
    begin
        result := result+i;
        i := i+1;
    end};
    print result;
end
